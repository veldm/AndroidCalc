<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidCalc.MainPage">

    <StackLayout>
        <Label Text="Калькулятор" Margin="30" FontSize="Large" FontAttributes="Bold" TextColor="Black"/>
        <Entry x:Name="Input" HorizontalOptions="CenterAndExpand" Keyboard="Numeric"/>
        <StackLayout Orientation="Horizontal" Spacing="50" HorizontalOptions="CenterAndExpand">
            <Button Text="+"/>
            <Button Text="-"/>
            <Button Text="*"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Spacing="50" HorizontalOptions="CenterAndExpand">
            <Button Text="/"/>
            <Button Text="^"/>
            <Button Text="Sqrt"/>
        </StackLayout>
        <Label x:Name="result" Margin="15" HorizontalTextAlignment="Center" Text="Результат: "
               FontSize="Large" FontAttributes="Bold" TextColor="Black"/>
        <Button Text="Calculate" Clicked="Calculate" WidthRequest="370" x:Name="ProceedButton"/>
    </StackLayout>

</ContentPage>
